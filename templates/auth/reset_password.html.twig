{% extends 'base.html.twig' %}

{% block title %}Nouveau mot de passe - Entr'Aide 2.0
{% endblock %}

{% block body %}
	<div class="container py-5">
		<div class="row justify-content-center">
			<div class="col-md-8 col-lg-6">
				<div class="card shadow-lg auth-card">
					<div class="card-header text-white text-center py-4" style="background-color: #4CAF50;">
						<h1 class="h3 mb-0 fw-bold">
							<i class="bi bi-key-fill me-2"></i>Nouveau mot de passe</h1>
					</div>
					<div class="card-body px-lg-5 py-4">
						{{ form_start(form) }}

						<div class="form-group mb-4">
							<label class="form-label">Nouveau mot de passe</label>
							<div class="input-group">
								{{ form_widget(form.plainPassword.first, {
									attr: { 
										class: 'form-control form-control-lg rounded-3 password-input',
										placeholder: '8 caractères avec majuscule, minuscule, chiffre et symbole'
									}
								}) }}
								<button type="button" class="btn btn-outline-secondary password-toggle" aria-label="Afficher le mot de passe">
									<i class="bi bi-eye-slash"></i>
								</button>
							</div>
							<small class="form-text text-muted">
								Symboles autorisés : ! @ # $ % ^ & * ( ) - + = _ { } [ ] etc.
							</small>
							{{ form_errors(form.plainPassword.first) }}
						</div>

						<div class="form-group mb-4">
							<label class="form-label">Confirmation</label>
							<div class="input-group">
								{{ form_widget(form.plainPassword.second, {
									attr: { 
										class: 'form-control form-control-lg rounded-3 password-input',
										placeholder: 'Répétez le nouveau mot de passe'
									}
								}) }}
								<button type="button" class="btn btn-outline-secondary password-toggle" aria-label="Afficher le mot de passe">
									<i class="bi bi-eye-slash"></i>
								</button>
							</div>
							{{ form_errors(form.plainPassword.second) }}
						</div>

						<div class="d-grid gap-2 mt-5">
							<button type="submit" class="btn btn-primary btn-lg rounded-pill fw-semibold">
								<i class="bi bi-key me-2"></i>Réinitialiser
							</button>
						</div>
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script>
		document.addEventListener('DOMContentLoaded', function () {
const toggleButtons = document.querySelectorAll('.password-toggle');

toggleButtons.forEach(button => {
button.addEventListener('click', function (e) {
const input = this.previousElementSibling;
const icon = this.querySelector('i');

// Toggle input type
const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
input.setAttribute('type', type);

// Toggle icon
icon.classList.toggle('bi-eye');
icon.classList.toggle('bi-eye-slash');

// Accessibilité
const label = type === 'password' ? 'Afficher le mot de passe' : 'Masquer le mot de passe';
this.setAttribute('aria-label', label);
});
});
});
	</script>
{% endblock %}
