{# blog/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier
	{{ post.title }}
	- Entr'Aide 2.0
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1 class="mb-4">Modifier "{{ post.title }}"</h1>

		{{ form_start(form) }}
		{{ form_row(form.title) }}
		{{ form_row(form.content) }}
		{% if post.imageName %}
			<img src="{{ asset('uploads/blog/' ~ post.imageName) }}" alt="Image actuelle" class="img-fluid mb-4">
		{% endif %}
		{{ form_row(form.imageFile) }}

		<button type="submit" class="btn btn-primary">
			<i class="bi bi-save"></i>
			Enregistrer
		</button>
		<a href="{{ path('app_blog_show', {'slug': post.slug}) }}" class="btn btn-secondary">
			Annuler
		</a>
		{{ form_end(form) }}
	</div>
{% endblock %}
