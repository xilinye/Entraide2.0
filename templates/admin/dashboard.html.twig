{% extends 'base.html.twig' %}

{% block title %}Tableau de bord Admin - Entr'Aide 2.0
{% endblock %}

{% block body %}
	<style>
		.admin-card {
			border-radius: 15px;
			transition: transform 0.3s ease;
		}
		.admin-card:hover {
			transform: translateY(-5px);
		}
		.stat-badge {
			background-color: #4CAF50;
			color: white;
			padding: 0.5rem 1rem;
			border-radius: 20px;
			font-weight: 600;
		}
		.btn-admin {
			background-color: #4CAF50;
			color: white;
			border: none;
			transition: all 0.3s ease;
		}
		.btn-admin:hover {
			background-color: #45a049;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
		}
	</style>

	<div class="container-fluid py-4">
		<h1 class="mb-4 fw-bold display-5" style="color: #4CAF50;">
			<i class="bi bi-speedometer2 me-2"></i>Tableau de bord Admin
		</h1>

		<div
			class="row g-4">
			<!-- Colonne Statistiques -->
			<div class="col-md-6">
				<div class="card shadow-lg admin-card">
					<div class="card-header text-white py-3" style="background-color: #4CAF50;">
						<h3 class="h5 mb-0 fw-bold">
							<i class="bi bi-graph-up me-2"></i>Statistiques</h3>
					</div>
					<div class="card-body px-lg-5 py-4">
						<ul class="list-group list-group-flush">
							<li class="list-group-item d-flex justify-content-between align-items-center py-3">
								<div>
									<i class="bi bi-people-fill me-2" style="color: #4CAF50;"></i>
									Utilisateurs inscrits
								</div>
								<span class="stat-badge">{{ users_count }}</span>
							</li>
							<li class="list-group-item d-flex justify-content-between align-items-center py-3">
								<div>
									<i class="bi bi-list-task me-2" style="color: #4CAF50;"></i>
									Compétences disponibles
								</div>
								<span class="stat-badge">{{ skills_count }}</span>
							</li>
							<li class="list-group-item d-flex justify-content-between align-items-center py-3">
								<div>
									<i class="bi bi-tags-fill me-2" style="color: #4CAF50;"></i>
									Catégories actives
								</div>
								<span class="stat-badge">{{ categories_count }}</span>
							</li>
						</ul>
					</div>
				</div>
			</div>

			<!-- Colonne Actions rapides -->
			<div class="col-md-6">
				<div class="card shadow-lg admin-card">
					<div class="card-header text-white py-3" style="background-color: #4CAF50;">
						<h3 class="h5 mb-0 fw-bold">
							<i class="bi bi-lightning-charge me-2"></i>Actions rapides</h3>
					</div>
					<div class="card-body px-lg-5 py-4">
						<div class="d-grid gap-3">
							<a href="{{ path('app_admin_users') }}" class="btn btn-admin btn-lg rounded-pill fw-semibold d-flex align-items-center justify-content-center">
								<i class="bi bi-people-fill fs-5 me-3"></i>
								Gérer les utilisateurs
							</a>
							<a href="{{ path('app_admin_skills') }}" class="btn btn-admin btn-lg rounded-pill fw-semibold d-flex align-items-center justify-content-center">
								<i class="bi bi-list-task fs-5 me-3"></i>
								Gérer les compétences
							</a>
							<a href="{{ path('app_admin_categories') }}" class="btn btn-admin btn-lg rounded-pill fw-semibold d-flex align-items-center justify-content-center">
								<i class="bi bi-bookmark-fill fs-5 me-3"></i>
								Gérer les catégories
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
