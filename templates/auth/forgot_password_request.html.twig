{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Entr'Aide 2.0
{% endblock %}

{% block body %}
	<div class="container py-5">
		<div class="row justify-content-center">
			<div class="col-md-8 col-lg-6">
				<div class="card shadow-lg auth-card">
					<div class="card-header text-white text-center py-4" style="background-color: #4CAF50;">
						<h1 class="h3 mb-0 fw-bold">
							<i class="bi bi-key me-2"></i>Réinitialisation du mot de passe</h1>
					</div>
					<div class="card-body px-lg-5 py-4">
						<form method="post">
							<div class="mb-4">
								<label for="email" class="form-label fw-medium">Adresse email</label>
								<input type="email" class="form-control form-control-lg rounded-3" id="email" name="email" placeholder="exemple@email.com" required>
							</div>

							<div class="d-grid gap-2 mt-5">
								<button type="submit" class="btn btn-primary btn-lg rounded-pill fw-semibold">
									<i class="bi bi-send-check me-2"></i>Envoyer les instructions
								</button>
							</div>
						</form>

						<div class="mt-4 text-center">
							<a href="{{ path('app_login') }}" class="text-decoration-none text-success">
								<i class="bi bi-box-arrow-in-left me-1"></i>Retour à la connexion
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
