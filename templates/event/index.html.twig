{% extends 'base.html.twig' %}

{% block title %}Événements - Entr'Aide 2.0
{% endblock %}

{% block body %}
	<div class="text-end mb-4">
		<a href="{{ path('app_event_new') }}" class="btn btn-success">
			<i class="bi bi-calendar-plus"></i>
			Créer un événement
		</a>
	</div>

	<h1 class="mb-4">Événements à venir</h1>
	{% if upcoming_events is empty %}
		<div class="alert alert-info">Aucun événement à venir</div>
	{% else %}
		<div class="row row-cols-1 row-cols-md-3 g-4">
			{% for event in upcoming_events %}
				<div class="col">
					<div class="card h-100">
						<div class="card-body">
							<h5 class="card-title">{{ event.title }}</h5>
							<p class="card-text">{{ event.description|u.truncate(100, '...') }}</p>
							<p class="text-muted">
								<small>Début :
									{{ event.startDate|date('d/m/Y H:i') }}</small>
							</p>
							<a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-primary">
								Voir détails
							</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	{% endif %}

	<h1 class="mt-5 mb-4">Événements passés</h1>
	{% if past_events is empty %}
		<div class="alert alert-info">Aucun événement passé</div>
	{% else %}
		<div class="row row-cols-1 row-cols-md-3 g-4">
			{% for event in past_events %}
				<div class="col">
					<div class="card h-100">
						<div class="card-body">
							<h5 class="card-title">{{ event.title }}</h5>
							<p class="card-text">{{ event.description|u.truncate(100, '...') }}</p>
							<p class="text-muted">
								<small>Début :
									{{ event.startDate|date('d/m/Y H:i') }}</small>
							</p>
							<a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-outline-secondary">
								Voir détails
							</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	{% endif %}
{% endblock %}
