{% extends 'base.html.twig' %}

{% block title %}Contact - Entr'Aide 2.0
{% endblock %}

{% block body %}
	<div class="card shadow-lg contact-card mb-5">
		<div class="card-header text-white">
			<div class="d-flex align-items-center gap-3">
				<i class="bi bi-chat-dots-fill fs-1"></i>
				<div>
					<h2 class="mb-0 display-5 fw-bold">Nous contacter</h2>
					<p class="mb-0 opacity-75">Réponse sous 24h</p>
				</div>
			</div>
		</div>
		<div class="card-body px-lg-5 py-5">
			{{ form_start(form) }}
			<div class="row g-4">
				<div class="col-md-6">
					{{ form_row(form.name, {
                        label: 'Votre nom',
                        attr: {
                            class: 'form-control-lg rounded-4',
                            placeholder: 'Jean Dupont'
                        },
                        row_attr: {class: 'mb-4'},
                        label_attr: {class: 'form-label fs-5'}
                    }) }}
				</div>

				<div class="col-md-6">
					{{ form_row(form.email, {
                        label: 'Adresse email',
                        attr: {
                            class: 'form-control-lg rounded-4',
                            placeholder: 'exemple@email.com'
                        },
                        row_attr: {class: 'mb-4'},
                        label_attr: {class: 'form-label fs-5'}
                    }) }}
				</div>

				<div class="col-12">
					{{ form_row(form.subject, {
                        label: 'Sujet du message',
                        attr: {
                            class: 'form-control-lg rounded-4',
                            placeholder: 'Demande de partenariat'
                        },
                        row_attr: {class: 'mb-4'},
                        label_attr: {class: 'form-label fs-5'}
                    }) }}
				</div>

				<div class="col-12">
					{{ form_row(form.message, {
                        label: 'Votre message',
                        attr: {
                            class: 'form-control-lg rounded-4',
                            placeholder: 'Décrivez votre demande en détail...',
                            rows: 6
                        },
                        row_attr: {class: 'mb-5'},
                        label_attr: {class: 'form-label fs-5'}
                    }) }}
				</div>

				<div class="col-12 text-end">
					<button type="submit" class="btn btn-primary btn-lg rounded-pill px-4">
						<i class="bi bi-send-fill me-2"></i>Envoyer le message
					</button>
				</div>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
