{% extends 'base.html.twig' %}

{% block title %}Nouveau mot de passe - Entr'Aide 2.0{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg auth-card">
                <div class="card-header text-white text-center py-4" style="background-color: #4CAF50;">
                    <h1 class="h3 mb-0 fw-bold"><i class="bi bi-key-fill me-2"></i>Nouveau mot de passe</h1>
                </div>
                <div class="card-body px-lg-5 py-4">
                    <form method="post">
                        <div class="mb-4">
                            <label for="password" class="form-label fw-medium">Nouveau mot de passe</label>
                            <input 
                                type="password" 
                                class="form-control form-control-lg rounded-3"
                                id="password" 
                                name="password"
                                placeholder="••••••••"
                                required>
                        </div>

                        <div class="d-grid gap-2 mt-5">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill fw-semibold">
                                <i class="bi bi-key me-2"></i>Réinitialiser
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}