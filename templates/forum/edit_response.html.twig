{% extends 'base.html.twig' %}

{% block title %}Modifier la réponse
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h2 class="mb-4">Modifier la réponse</h2>

		{{ form_start(form) }}
		{{ form_widget(form.content) }}

		<div class="mb-3">
			<label class="form-label">Image actuelle :</label>
			{% if response.imageName %}
				<img src="{{ asset('uploads/forumResponse/' ~ response.imageName) }}" class="img-thumbnail mb-2" style="max-height: 200px;">
				<div class="form-check">
					<input type="checkbox" class="form-check-input" id="removeImage" name="removeImage">
					<label class="form-check-label text-danger" for="removeImage">
						Supprimer l'image
					</label>
				</div>
			{% else %}
				<p>Aucune image</p>
			{% endif %}

			{{ form_label(form.imageFile) }}
			{{ form_widget(form.imageFile) }}
			<small class="form-text text-muted">
				Formats acceptés: JPEG, PNG (max 5Mo)
			</small>
		</div>

		<div class="d-flex gap-2">
			<button type="submit" class="btn btn-primary">
				<i class="bi bi-check-circle"></i>
				Enregistrer
			</button>
			<a href="{{ path('app_forum_show', {'id': response.forum.id}) }}" class="btn btn-outline-secondary">
				Annuler
			</a>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
