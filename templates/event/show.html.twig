									<li>ğŸ“ Lieu :
										{{ event.location }}</li>
									<li>ğŸ‘¤ Organisateur :
										{{ event.organizer.pseudo }}</li>
									<li>ğŸ‘¥ Participants :
										{{ event.attendees|length }}
